<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <html lang="en" >
      <head>
        <meta charset="UTF-8">
        <title>Login</title>
        <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
        <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Muli'><link rel="stylesheet" href="application.scss">
      </head>
        <body>
            <div class="pt-5">
                <h1 class="text-center">Login</h1>
                <div class="container">
                    <div class="row">
                        <div class="col-md-5 mx-auto">
                            <div class="card card-body">                                  
                              <form id="submitForm" action="/login" method="post" data-parsley-validate="" data-parsley-errors-messages-disabled="  true" novalidate="" _lpchecked="1"><input type="hidden" name="_csrf" value="7635eb83-1f95-4b32-8788-abec2724a9a4">
                                  <div class="form-group required"><br>
                                    <lSabel for="username">Username / Email</lSabel>
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email",type: "email",class: "form-control" %>
                                  </div>                    
                                  <div class="form-group required">
                                    <%= f.password_field :password, autocomplete: "current-password",class:"d-flex flex-row align-items-center", for:"password",class: "form-control" %>
                                    <% if devise_mapping.rememberable? %>
                                      <div class="field">
                                        <%= f.check_box :remember_me %>
                                        <%= f.label :remember_me %>
                                      </div>
                                    <% end %>
                                  </div>
                                  <div class="actions">
                                    <%= f.submit "Log in",class:"btn btn-primary btn-block" %>
                                  </div>
                              </form>
                               <p class="small-xl pt-3 text-center">
                                <%= render "devise/shared/links" %>
                               </p>
                               <%= link_to "Admin", user_session_path ,class:"btn btn-outline-warning"%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
        </body>
    </html>
<% end %>
