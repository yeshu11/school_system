<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Start date</th>
      <th>end date</th>
      <th>status</th>
      <th>remark</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.teacher.name%></td>
        <td><%= attendance.start_date%></td>
        <td><%= attendance.end_date%></td>
        <td><%= attendance.status%></td>
        <td><%= attendance.remark%></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

