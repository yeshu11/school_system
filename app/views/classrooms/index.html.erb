<p id="notice"><%= notice %></p>

<h1>Classrooms</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>year</th>
      <th>section</th>
      <th>teacher</th>
      <th>Subject</th>
      <th>Grade</th>
      <th>status</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name%></td>
        <td><%= classroom.year%></td>
        <td><%= classroom.section%></td>
        <td><%= classroom.teacher.name%></td>
        <td><%= classroom.teacher.subject.name%></td>
        <td><%= classroom.grade.name%></td>
        <td><%= classroom.status%></td>
        <td><%= link_to 'Show', classroom %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
        <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

