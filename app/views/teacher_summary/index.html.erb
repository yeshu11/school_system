<% if teacher_signed_in? %>
      Logged in as <strong><%= current_teacher.email %></strong>.
  <%= link_to 'Edit profile', edit_teacher_registration_path %> |
  <%= link_to "Logout", destroy_teacher_session_path, data: { turbo_method: :delete } %>

<% else %>
  <%= link_to "Sign up", new_teacher_registration_path %> |
  <%= link_to "Login", new_teacher_session_path %>
<% end %>

<h1>Teachers Summary</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>Email</th>
      <th>subject</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name%></td>
        <td><%= teacher.email%></td>
        <td><%= teacher.subject.name%></td>
      </tr>
    <% end %>
  </tbody>
</table>



<p id="notice"><%= notice %></p>

<h1>Classrooms Summary</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>year</th>
      <th>section</th>
      <th>teacher</th>
      <th>Subject</th>
      <th>Grade</th>
      <th>status</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name%></td>
        <td><%= classroom.year%></td>
        <td><%= classroom.section%></td>
        <td><%= classroom.teacher.name%></td>
        <td><%= classroom.teacher.subject.name%></td>
        <td><%= classroom.grade.name%></td>
        <td><%= classroom.status%></td>
      </tr>
    <% end %>
  </tbody>
</table>

